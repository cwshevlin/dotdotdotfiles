[user]
  name = Mike Busch
[github]
  user = mikelikesbikes
[alias]
  st = status
  stb = status -sb
  ci = commit
  br = branch
  co = checkout
  pr = pull --rebase
  amend = commit --amend
  am = commit --amend -C HEAD
  initialize = !git init && git commit --allow-empty -m 'initial commit'
  stache = stash
  praise = blame
  pom = push origin master
  lg = log -p
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  shas = log --pretty=format:"%H"
  sha = log --pretty=format:"%H" -1
  gp = grep -C 2
  bname = rev-parse --abbrev-ref HEAD
  pb = !branch-name=$(git rev-parse --abbrev-ref HEAD) && handle=$(git config user.handle) && git push origin ${branch-name}:${handle}/${branch-name}
  yolo = !git add -u . && git commit -m 'wip... yolo' && git pull --rebase && git push

  # "aliases" to get autocomplete to work for pivotal_git_scripts
  about = about
  project = project
  pair = pair
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore
[push]
  default = tracking
[branch "master"]
  remote = origin
  merge = refs/heads/master
[mergetool]
  keepBackup = false
[include]
  path = ~/.gitconfig.local
