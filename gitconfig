[user]
  name = Mike Busch
  email = busch.michael@gmail.com
[alias]
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  stache = stash
  praise = blame
  # lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  pom = push origin master
  lg = log -p
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  rebase-hudson = !cgbranch=$(git symbolic-ref HEAD | sed -n 's:refs/heads/:_:p') && cgsha=$(git log --format="%h" | head -1) && git push origin HEAD:rebase/master/mbusch/${cgsha}${cgbranch}
  merge-hudson = !cgbranch=$(git symbolic-ref HEAD | sed -n 's:refs/heads/:_:p') && cgsha=$(git log --format="%h" | head -1) && git push origin HEAD:merge/master/mbusch/${cgsha}${cgbranch}
  test-hudson = !cgbranch=$(git symbolic-ref HEAD | sed -n 's:refs/heads/:_:p') && cgsha=$(git log --format="%h" | head -1) && git push origin HEAD:test/mbusch/${cgsha}${cgbranch}
  remote-mine = !git remote prune origin && echo "-------------------------------" && git branch -a | grep remotes | grep mbusch
  gp = grep -C 2
  check-uat = !rev=$(uat-rev) && git log HEAD..${rev}
  hsha = !cat .git/HEAD | cut -c1-7

  # "aliases" to get autocomplete to work for pivotal_git_scripts
  about = about
  project = project
  pair = pair
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = /Users/mike/.gitignore
[push]
  default = tracking
[branch "master"]
  remote = origin
  merge = refs/heads/master
[merge]
  # tool = p4merge
[mergetool]
  keepBackup = false
[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  trustExitCode = false
