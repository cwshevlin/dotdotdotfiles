[user]
  name = Mike Busch
[alias]
  st = status
  stb = status -sb
  ci = commit
  br = branch
  co = checkout
  pr = pull --rebase
  amend = commit --amend
  am = commit --amend -C HEAD
  stache = stash
  praise = blame
  pom = push origin master
  lg = log -p
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  shas = log --pretty=format:"%H"
  sha = log --pretty=format:"%H" -1
  gp = grep -C 2

  # "aliases" to get autocomplete to work for pivotal_git_scripts
  about = about
  project = project
  pair = pair
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore
[push]
  default = tracking
[branch "master"]
  remote = origin
  merge = refs/heads/master
[mergetool]
  keepBackup = false
[include]
  path = .gitconfig.local
